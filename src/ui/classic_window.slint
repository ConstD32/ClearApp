component MenuItem {
    in property <string> text;
    in property <bool> enabled <=> touch.enabled;
    in property <bool> checkable;
    in property <bool> checked;

    callback clicked();

    height: 30px;
    min-width: 200px;

    Rectangle {
        background: enabled ? (hover ? (root.dark-mode ? #505050 : #e0e0e0) : transparent) : transparent;

        HorizontalBox {
            padding: 5px;
            Text {
                text: root.text;
                color: root.enabled ? (root.dark-mode ? white : black) : (root.dark-mode ? #666666 : #aaaaaa);
            }

            HorizontalBox {
//                horizontal-alignment: right;

                Text {
                    text: checked ? "‚úì" : "";
                    color: dark-mode ? white : black;
                    visible: checkable;
                }
            }
        }

        touch := TouchArea {
            clicked => {
                if (enabled) {
                    root.clicked();
                }
            }
        }
    }
}

component MenuSeparator {
    height: 1px;

    Rectangle {
//        background: root.dark-mode ? #444444 : #c0c0c0;
        height: 1px;
    }
}

